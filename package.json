{
  "name": "exodus.ing",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nanozuki/exodus.ing.git"
  },
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite build --mode staging && EXODUSING_HOST=http://localhost:4173 vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check --write . && eslint .",
    "test:unit": "vitest",
    "test": "npm run test:unit -- --run && npm run test:e2e",
    "test:e2e": "playwright test",
    "test:e2e-ui": "playwright test --ui",
    "db:push": "drizzle-kit push",
    "db:pull": "drizzle-kit pull",
    "db:studio": "drizzle-kit studio",
    "db:export": "drizzle-kit export > src/lib/server/repositories/database.sql",
    "db:create-dev": "pnpm dlx tsx src/scripts/create_dev_db.ts",
    "db:create-template": "pnpm dlx tsx src/scripts/create_template_db.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@flydotio/dockerfile": "^0.7.10",
    "@iconify-json/material-symbols-light": "^1.2.53",
    "@iconify-json/mdi": "^1.2.3",
    "@melt-ui/pp": "^0.3.2",
    "@melt-ui/svelte": "^0.86.6",
    "@playwright/test": "^1.58.1",
    "@sveltejs/adapter-node": "^5.5.2",
    "@sveltejs/kit": "^2.50.1",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@tailwindcss/vite": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/svelte": "^5.3.1",
    "@types/eslint": "^9.6.1",
    "@types/mdast": "^4.0.4",
    "@types/node": "^25.1.0",
    "@types/pg": "^8.16.0",
    "@vitest/browser-playwright": "^4.0.18",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.14.0",
    "globals": "^17.2.0",
    "jsdom": "^27.4.0",
    "playwright": "^1.58.1",
    "prettier": "^3.8.1",
    "prettier-plugin-svelte": "^3.4.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "svelte": "^5.49.1",
    "svelte-check": "^4.3.6",
    "tailwindcss": "^4.1.18",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "unplugin-icons": "^23.0.1",
    "vfile": "^6.0.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "vitest-browser-svelte": "^2.0.2",
    "zod": "^4.3.6"
  },
  "type": "module",
  "dependencies": {
    "arctic": "^3.7.0",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.45.1",
    "modern-normalize": "^3.0.1",
    "nanoid": "^5.1.6",
    "pg": "^8.18.0",
    "rehype-raw": "^7.0.0",
    "rehype-sanitize": "^6.0.0",
    "rehype-stringify": "^10.0.1",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "runed": "^0.37.1",
    "tailwind-merge": "^3.4.0",
    "unified": "^11.0.5",
    "vfile-matter": "^5.0.1"
  },
  "packageManager": "pnpm@10.28.2",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
